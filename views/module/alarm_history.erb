<md-container class="alarm-history">

    <div class="md-whiteframe-8dp" layout-margin layout="row" layout-align="center center">
        <md-input-container flex="80">
            <input name="searchText" ng-change="moduleApp.searchText(moduleApp.search.text, 'alarm_history')" ng-model="moduleApp.search.text" placeholder="Wyszukaj">
        </md-input-container>
    </div>

    <md-list-item flex layout="row" layout-align="space-around center" md-colors="{background: 'blue-500'}">
        <p flex="25" class="alarm-history__value cursor-pointer" ng-click="moduleApp.setOrder('txtId')">Nazwa<span class="arrow" ng-show="moduleApp.typeField == 'txtId'" ng-class="{false: 'arrow--reverse'}[moduleApp.reverse]">▼</span></p>
        <p flex="10" class="alarm-history__value cursor-pointer" ng-click="moduleApp.setOrder('id')">Id<span class="arrow" ng-show="moduleApp.typeField == 'id'" ng-class="{false: 'arrow--reverse'}[moduleApp.reverse]">▼</span></p>
        <p flex="15" class="alarm-history__value cursor-pointer" ng-click="moduleApp.setOrder('type')">Typ<span class="arrow" ng-show="moduleApp.typeField == 'type'" ng-class="{false: 'arrow--reverse'}[moduleApp.reverse]">▼</span></p>
        <p flex="25" class="alarm-history__value cursor-pointer" ng-click="moduleApp.setOrder('startAlarm')">Start alarmu<span class="arrow" ng-show="moduleApp.typeField == 'startAlarm'" ng-class="{false: 'arrow--reverse'}[moduleApp.reverse]">▼</span></p>
        <p flex="25" class="alarm-history__value cursor-pointer" ng-click="moduleApp.setOrder('clearAlarm')">Koniec alarmu<span class="arrow" ng-show="moduleApp.typeField == 'clearAlarm'" ng-class="{false: 'arrow--reverse'}[moduleApp.reverse]">▼</span></p>
    </md-list-item>

    <md-virtual-repeat-container class="alarm-history__list">
        <div md-virtual-repeat="alarm in moduleApp.moduleAlarmHistory | customOrderBy:moduleApp.typeField:moduleApp.reverse" flex layout="row" layout-align="space-around center"  class="alarm-history__item-list cursor-pointer" ng-click="showAlarm($event, alarm)">
            <p flex="25" class="alarm-history__value">{{tools.subtitle(alarm.txtId)}}</p>
            <p flex="10" class="alarm-history__value">{{alarm.id}}</p>
            <p flex="15" class="alarm-history__value">{{alarm.type}}</p>
            <p flex="25" class="alarm-history__value">{{alarm.startAlarm}}</p>
            <p flex="25" class="alarm-history__value">{{alarm.clearAlarm}}</p>
        </div>
    </md-virtual-repeat-container>
    <h1 class="no-data-alert" ng-show="moduleApp.alarmHistoryAlert">Brak danych do wyświetlenia</h1>
</md-container>